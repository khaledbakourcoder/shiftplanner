{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ESNext",
    "lib": ["ES2023", "DOM"],               // DOM-Typen für React/JSX
    "jsx": "react-jsx",                     // neue JSX-Runtime
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "skipLibCheck": true,

    /* Linting/Strenge */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* Nützlich */
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["vite/client", "node"]
  },
  "include": [
    "src",                   // <– deine React-Dateien
    "electron",              // falls du TS/TSX im Electron-Ordner nutzt
    "vite-env.d.ts",
    "vite.config.ts"
  ]
}
